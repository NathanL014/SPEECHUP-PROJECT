<style>
        .container {
            max-width: 600px;
            margin: 50px auto;
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background-color: #fff;
        }

        .password-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        input[type="password"], input[type="text"] {
            width: 200px;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .profile-header {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-picture img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
        }

        .profile-details {
            margin-top: 20px;
            text-align: left;
            padding: 10px;
            border-top: 1px solid #ddd;
        }

        .logout-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #d9534f;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

        input[type="file"] {
            margin-top: 10px;
        }

        button {
            margin-top: 5px;
            padding: 5px 10px;
            background-color: #df1645;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #editProfile {
            background-color: #007bff;
        }

        #updateProfile {
            background-color: #007bff;
            display: none;
        }

        #deleteAccount {
            background-color: red;
        }

    </style>

    <h2>Your Profile</h2>

    <div class="container">
        <div class="profile-header">
            <div class="profile-picture">
                <img id="profileImage" src="/uploads/default-profile.png" alt="Profile Picture">
                <form id="uploadForm" action="/upload-profile" method="POST" enctype="multipart/form-data">
                    <input type="file" name="profileImage" id="profileImageInput" accept="image/*">
                    <button type="submit">Upload</button>
                </form>
            </div>
            <h2 id="username">{{firstName}} {{lastName}}</h2>
        </div>
        
        <div class="profile-details">
            <p><strong>First Name:</strong></p>
        <input type="text" id="firstName" value="{{firstName}}" disabled>
        <br>
        <br>
        <p><strong>Last Name:</strong></p>
        <input type="text" id="lastName" value="{{lastName}}" disabled>
        <br>
        <br>
        <p><strong>Email:</strong></p>
        <input type="email" id="email" value="{{email}}" disabled>
        <br>
        <br>
        <p><strong>Change Password:</strong></p>
        <input type="password" id="password" placeholder="Enter new password" disabled>
        <br>
        <br>
        <!-- Password Verification Field -->
        <p><strong>Enter your password to view it:</strong></p>
        <input type="password" id="verifyPassword" placeholder="Enter your password">
        <button onclick="verifyPatientPassword()">Verify</button>
        <br>
        <br>
        <!-- Password Display -->
        <p><strong>Your Password:</strong></p>
        <div class="password-container">
            <input type="password" id="passwordField" value="*******" readonly>
            <button id="togglePassword" onclick="togglePassword()" disabled>üëÅ</button>
        </div>
        <br>
        <br>
        <button id="editProfile" onclick="enableEditing()">Edit Profile</button>
        <button id="updateProfile" onclick="updateProfile()">Update Profile</button>
        <button id="deleteAccount" onclick="deleteAccount()">Delete Account</button>

        </div>

    </div>
